<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen.App.App"
             xmlns:vm="clr-namespace:Examen.App.ViewModels">
    <Application.Resources>
        <vm:LocacionesViewModel x:Key="LocacionApp" />

        <!--LOGIN BACKGRAUND-->
        <Style x:Key="LoginStyle" TargetType="ContentPage">
            <Setter Property="BackgroundColor" Value="#00cec9" />
        </Style>

        <!--IMAGEN LOGIN BACKGRAUND-->
        <OnPlatform x:Key="imgBackgraundLogin" 
                      x:TypeArguments="ImageSource"
                      iOS="backgraund.png"
                      Android="backgraund.png"/>

        <!--LOGO-->
        <OnPlatform x:Key="imgLogo" 
                      x:TypeArguments="ImageSource"
                      iOS="logo.png"
                      Android="logo.png"/>

        <!--COLOR ERROR-->
        <Color x:Key="colorError">#ff6b6b</Color>
    </Application.Resources>
</Application>